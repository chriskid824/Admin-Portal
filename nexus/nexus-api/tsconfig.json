{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "types": ["node"],
    "lib": [ "es2015", "dom" ],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
