{{#> mainLayout }}
<div id="users">
  <h1>Manage Users</h1>
  {{#if users}}
  <div class="overflow-visible">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{ username }}</td>
          <td>{{#if isActive}}Active{{else}}Deleted{{/if}}</td>
          <td>
            <a href="/user/{{id}}" class="btn btn-primary">View/Edit</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <nav aria-label="Page navigation" class="d-table mx-auto">
  </nav>
  {{/if}}
</div>
{{/mainLayout}}