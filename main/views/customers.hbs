{{#> mainLayout }}
<div id="customers">
  <h1>{{#if title}}{{title}}{{^}}Customers{{/if}}</h1>
  {{#if customers}}
  <div class="overflow-visible">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Contact number</th>
          <th>Country</th>
          <th>Order Count</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each customers}}
        <tr>
          <td>{{ data.row_number }}</td>
          <td>{{ name }}</td>
          <td>{{ email }}</td>
          <td>{{ contactNumber }}</td>
          <td>{{ data.country_name }}</td>
          <td>{{ data.order_count }}</td>
          <td>
            <a href="/customer/{{id}}" class="btn btn-primary">View Details</a>
            <a href="/customer/{{id}}" class="btn btn-secondary disabled">Edit Details</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <nav aria-label="Page navigation" class="d-table mx-auto">
    <ul class="pagination">
      {{#if previousPage}}
      <li class="page-item">
        <a class="page-link" href="/customer{{#if currentPath}}{{currentPath}}{{/if}}?page={{previousPage}}">
          Previous
        </a>
      </li>
      <li class="page-item">
        <a class="page-link" href="/customer{{#if currentPath}}{{currentPath}}{{/if}}?page={{previousPage}}">
          {{previousPage}}
        </a>
      </li>
      {{else}}
      <li class="page-item disabled">
        <a class="page-link" href="#">
          Previous
        </a>
      </li>
      {{/if}}
      <li class="page-item active" aria-current="page">
        <a class="page-link" href="/customer{{#if currentPath}}{{currentPath}}{{/if}}?page={{page}}">
          {{page}}
        </a>
      </li>
      <li class="page-item">
        <a class="page-link" href="/customer{{#if currentPath}}{{currentPath}}{{/if}}?page={{nextPage}}">
          {{nextPage}}
        </a>
      </li>
      <li class="page-item">
        <a class="page-link" href="/customer{{#if currentPath}}{{currentPath}}{{/if}}?page={{nextPage}}">
          Next
        </a>
      </li>
    </ul>
  </nav>
  {{else}}
  <div>
    No customers found
  </div>
  {{/if}}
</div>
{{/mainLayout}}