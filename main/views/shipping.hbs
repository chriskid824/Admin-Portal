{{#> mainLayout}}

<form method="post" action="{{#if get}}{{else}}search{{/if}}" id="searchTrakingID">
  <table>
    <tr>
      <td></td>
      <label for="transitionID">Transition ID</label>
      <input type="text" id="transitionID" name="transitionID"
        value="{{#if shippingData}}{{shippingData.transition_id}}{{else}}{{/if}}" />
    </tr>
    <tr>
      <td>
        <label for="shippingDate">Shipping Date</label>
        <input type="text" id="shippingDate" name="shippingDate"
          value="{{#if shippingData}}{{shippingData.shipping_date}}{{else}}{{/if}}" />
      </td>
    </tr>
    <tr>
      <td>
        <input type="submit" class="btn btn-primary w-100 mt-2" value="Submit" />
      </td>
    </tr>
  </table>
</form>

{{#if shippingData}}
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Transition ID</th>
      <th>Ref number</th>
      <th>Paypal email</th>
      <th>Contact email</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{shippingData.transition_id}}</td>
      <td>{{shippingData.ref_number}}</td>
      <td>{{shippingData.paypal_email}}</td>
      <td>{{shippingData.contact_email}}</td>
      <td>{{shippingData.status}}</td>
      <td><a href="/shipping/update/?transitionID={{shippingData.transition_id}}&trackNum={{shippingData.track_num}}"
          class="btn btn-primary">update</a></td>
    </tr>
  </tbody>
</table>
{{/if}}

{{/mainLayout}}